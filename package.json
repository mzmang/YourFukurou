{
  "name": "yourfukurou",
  "productName": "YourFukurou",
  "version": "0.0.0",
  "description": "Hackable YoruFukurou alternative",
  "main": "build/main.js",
  "bin": "./bin/cli.js",
  "scripts": {
    "dep": "npm install && typings install",
    "build-main": "tsc --pretty -p main",
    "build-renderer": "tsc --pretty -p renderer && browserify renderer/js -o build/renderer.js",
    "build": "npm run build-main && npm run build-renderer",
    "app": "./bin/cli.js",
    "debug": "NODE_ENV=development ./bin/cli.js",
    "dummy": "NODE_ENV=development YOURFUKUROU_DUMMY_TWEETS=true ./bin/cli.js",
    "watch": "guard --watchdir main renderer",
    "lint": "tslint $(git ls-files | grep -E \".tsx?$\") && stylelint styles/style.css",
    "build-test": "tsc --pretty -p test/e2e",
    "test": "npm run build-test && ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhysd/YourFukurou.git"
  },
  "keywords": [
    "twitter client",
    "YoruFukurou",
    "Electron",
    "linux",
    "mac",
    "windows"
  ],
  "author": "rhysd <lin90162@yahoo.co.jp>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rhysd/YourFukurou/issues"
  },
  "homepage": "https://github.com/rhysd/YourFukurou#readme",
  "devDependencies": {
    "ava": "github:rhysd/ava#typescript-after-always",
    "browserify": "^13.0.1",
    "electron-packager": "^7.0.2",
    "spectron": "^3.1.2",
    "stylelint": "^6.5.1",
    "stylelint-config-standard": "^8.0.0",
    "tslint": "^3.9.0",
    "typescript": "^1.8.10",
    "typings": "^1.0.4",
    "why-did-you-update": "0.0.8"
  },
  "dependencies": {
    "about-window": "^1.3.1",
    "animate.css": "^3.5.1",
    "dexie": "^1.3.6",
    "draft-js": "^0.7.0",
    "electron-prebuilt": "^1.2.0",
    "electron-window-state": "^3.0.3",
    "font-awesome": "^4.6.3",
    "immutable": "^3.8.1",
    "loglevel": "^1.4.0",
    "loglevel-message-prefix": "github:rhysd/loglevel-message-prefix",
    "node-emoji": "^1.3.0",
    "oauth": "github:rhysd/node-oauth",
    "rc-tooltip": "^3.3.2",
    "react": "^15.1.0",
    "react-addons-transition-group": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-images": "^0.4.6",
    "react-list": "^0.7.18",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "tslint": "^3.10.2",
    "twit": "^2.2.4",
    "twitter": "^1.3.0",
    "twitter-text": "^1.13.4"
  },
  "ava": {
    "files": [
      "test/e2e/story/initial_timeline.js",
      "test/e2e/story/send_and_delete_tweet.js"
    ],
    "timeout": "60s",
    "serial": true
  }
}
