{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "target": "es2015",
    "outDir": "./js",
    "jsx": "react"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../helper.ts",
    "../fixture/fixture.ts",
    "../../../renderer/typings/*.d.ts",
    "../../../main/typings/twit.d.ts",
    "../../../main/typings/config.d.ts",
    "../../../main/typings/channel.d.ts"
  ]
}
